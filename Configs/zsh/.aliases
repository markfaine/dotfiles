# User Command Aliases File {{{

# Neovim/Vim {{{

# Configure vim as equivalent to EDITOR value  {{{
export EDITOR=vi
if command -v nvim &>/dev/null; then
    alias vim='nvim'
    alias vi='nvim'
    export EDITOR=nvim
fi
# End Configure vim as equivalent to EDITOR value }}}

# Configure a backup neovim config {{{
# I always have an old config that I use as a backup in case I break something
alias oldvim='NVIM_APPNAME=oldvim nvim'
# End Configure a backup neovim config }}}

# Configure stock nvim editor alias {{{
# This allows me to use stock vim 
alias svim="/usr/bin/vi" # stock vim
# End Configure stock nvim editor alias }}}

# End Neovim/Vim }}}

# Alias for cd command + typo protection {{{
